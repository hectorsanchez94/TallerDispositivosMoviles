        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/alta_paciente" />
        <activity
            android:name=".Modificar"
            android:label="@string/mod_pacientes" />
        <activity
            android:name=".Medicamento"
            android:label="@string/alta_medicamento" />
